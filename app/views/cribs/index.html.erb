<p id="notice"><%= notice %></p>

<div class="col-lg-9 col-md-12">
  <div class="row">
    <% @cribs.each do |crib| %>
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
      <div class="thumbnail"> <%= link_to image_tag(crib.pics[0].url(:thumb)), crib, class: "img-responsive"%>
        <div class="caption">
          <h3><%= crib.title %></h3>
          <p>$<%= crib.rent %> | Availability: <%= crib.availability.strftime('%m-%d-%y') %></p>
          <hr>
          <p class="text-center"><a href="#" class="btn btn-success" role="button">For Sale</a></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<br>
